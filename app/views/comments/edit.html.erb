<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
			<h2>ツイートを編集</h2>
			<%= form_for(@tweet) do |f| %>
                <% if @tweet.errors.any? %>
                    <p><%= @tweet.errors.count %>件のエラーが発生しました</p>
                    <% @tweet.errors.full_messages.each do |message| %>
                        <p><%= message %></p>
                    <% end %>
                <% end %>
				<%= f.text_area :body, :class => "form-control" %>
				<%= f.submit '保存', :class => "btn btn-default" %>
			<% end %>
		</div>
	</div>
</div>
