<div class="container">
    	<div class="row" style="margin-bottom: 15px;">
		<div class="col-md-3">
		</div>
		<div class="col-md-6">
			<h2 class="text-center">global-twitter</h2>
			<p class="text-center">思ったことを気軽につぶやこう</p>
		</div>
	</div>
        <div class="row">
			<div class="col-md-3">
				<div class="panel panel-info">
					<div class="panel-heading">
						<%= link_to user_path(current_user) do %>
							<h3><%= current_user.name %></h3>
						<% end %>
					</div>
				</div>
			</div>
	
			<div class="col-md-9">
				<% @tweets.each do |tweet| %>
					<%= render 'tweets/list', tweet: tweet %>
				<% end %>
				<div class="text-center">
					<%= paginate @tweets %>
				</div>
				</div>
	    </div>
</div>
