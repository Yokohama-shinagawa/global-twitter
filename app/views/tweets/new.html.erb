<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h3>新規ツイート</h3>
            <%= form_for(@tweet) do |f| %>
             
                <% if @tweet.errors.any? %>
                    <%= @tweet.errors.count %>件のエラーが発生しました
                    <% @tweet.errors.full_messages.each do |message| %>
                        <%= message %>
                    <% end %>
                <% end %>
                <%= f.text_area :body, :placeholder => "140文字以内で入力してください", :class => "form-control" %>
                <%= f.submit "投稿", :class => "btn btn-default" %>
            <% end %>
        </div>
    </div>
</div>
